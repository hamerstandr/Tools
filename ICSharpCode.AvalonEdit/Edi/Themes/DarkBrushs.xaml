<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    >

    <SolidColorBrush x:Key="EditorCurrentLineBackgroundColor" Color="#20FFFFFF" options:Freeze="true" />

    <SolidColorBrush x:Key="EditorBackground"                 Color="#FF181818"  options:Freeze="true" />

    <SolidColorBrush x:Key="EditorForeground"                 Color="#FFFFFFFF"  options:Freeze="true" />

    <SolidColorBrush x:Key="EditorLineNumbersForeground"      Color="#ff929292"  options:Freeze="true" />

    <SolidColorBrush x:Key="EditorSelectionBrush"      Color="#30FFFFFF"  options:Freeze="true" />
    <SolidColorBrush x:Key="EditorSelectionBorder"     Color="#50ffffff"  options:Freeze="true" />
    
    <SolidColorBrush x:Key="NonPrintableCharacterBrush" Color="#2FFFFFFF"  options:Freeze="true" />

    <SolidColorBrush x:Key="LinkTextForegroundBrush"    Color="#FFAAAAFF"  options:Freeze="true" />
    
    <!-- Style hyperlink displayed within text in text editor -->
    <SolidColorBrush x:Key="LinkTextBackgroundBrush"    Color="#18FFFFFF" options:Freeze="true" />

</ResourceDictionary>